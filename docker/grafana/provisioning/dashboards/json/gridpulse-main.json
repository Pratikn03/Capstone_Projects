{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "red", "value": 1 }
            ]
          },
          "unit": "s"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "legend": { "calcs": ["mean", "max"], "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "title": "API Response Time (p95)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(gridpulse_request_duration_seconds_bucket{job=\"gridpulse-api\"}[5m]))",
          "legendFormat": "p95 {{endpoint}}"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "mappings": [],
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] },
          "unit": "reqps"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "id": 2,
      "options": {
        "legend": { "calcs": ["mean", "max"], "displayMode": "list", "placement": "bottom" }
      },
      "title": "Request Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(gridpulse_requests_total{job=\"gridpulse-api\"}[1m])",
          "legendFormat": "{{endpoint}} {{method}}"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.95 },
              { "color": "green", "value": 0.99 }
            ]
          },
          "unit": "percentunit"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 },
      "id": 3,
      "options": { "orientation": "auto", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Success Rate",
      "type": "gauge",
      "targets": [
        {
          "expr": "1 - (rate(gridpulse_request_errors_total[5m]) / rate(gridpulse_requests_total[5m]))"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.05 },
              { "color": "red", "value": 0.1 }
            ]
          },
          "unit": "none"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 8 },
      "id": 4,
      "options": { "orientation": "auto", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Forecast MAPE",
      "type": "gauge",
      "targets": [
        { "expr": "gridpulse_forecast_mape{target=\"load_mw\"}" }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 20 },
              { "color": "green", "value": 50 }
            ]
          },
          "unit": "MWh"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 8 },
      "id": 5,
      "options": { "orientation": "auto", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Battery SOC",
      "type": "gauge",
      "targets": [
        { "expr": "gridpulse_battery_soc_mwh" }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 1000 }
            ]
          },
          "unit": "none"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 8 },
      "id": 6,
      "options": { "orientation": "auto", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "title": "Kafka Consumer Lag",
      "type": "gauge",
      "targets": [
        { "expr": "gridpulse_kafka_consumer_lag" }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "mappings": [],
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] },
          "unit": "MW"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "id": 7,
      "options": {
        "legend": { "calcs": ["mean", "max", "min"], "displayMode": "list", "placement": "bottom" }
      },
      "title": "Forecast vs Actual (Load)",
      "type": "timeseries",
      "targets": [
        { "expr": "gridpulse_forecast_value{target=\"load_mw\"}", "legendFormat": "Forecast" },
        { "expr": "gridpulse_actual_value{target=\"load_mw\"}", "legendFormat": "Actual" }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "mappings": [],
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] },
          "unit": "currencyUSD"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "id": 8,
      "options": {
        "legend": { "calcs": ["mean", "sum"], "displayMode": "list", "placement": "bottom" }
      },
      "title": "Cost Metrics",
      "type": "timeseries",
      "targets": [
        { "expr": "gridpulse_optimization_cost_baseline", "legendFormat": "Baseline Cost" },
        { "expr": "gridpulse_optimization_cost_optimized", "legendFormat": "Optimized Cost" },
        { "expr": "gridpulse_optimization_cost_savings", "legendFormat": "Savings" }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "mappings": [],
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] },
          "unit": "bytes"
        }
      },
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 20 },
      "id": 9,
      "options": {
        "legend": { "calcs": ["mean", "max"], "displayMode": "list", "placement": "bottom" }
      },
      "title": "Memory Usage",
      "type": "timeseries",
      "targets": [
        { "expr": "process_resident_memory_bytes{job=\"gridpulse-api\"}", "legendFormat": "RSS" },
        { "expr": "process_virtual_memory_bytes{job=\"gridpulse-api\"}", "legendFormat": "Virtual" }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "mappings": [],
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] },
          "unit": "short"
        }
      },
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 20 },
      "id": 10,
      "options": {
        "legend": { "calcs": ["sum"], "displayMode": "list", "placement": "bottom" }
      },
      "title": "Anomalies Detected",
      "type": "timeseries",
      "targets": [
        { "expr": "increase(gridpulse_anomalies_detected_total[1h])", "legendFormat": "{{target}}" }
      ]
    },
    {
      "datasource": "Prometheus",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 26 },
      "id": 11,
      "options": {
        "showLabels": false,
        "showTime": true,
        "sortOrder": "Descending",
        "maxItems": 25
      },
      "title": "Recent Alerts",
      "type": "alertlist"
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["gridpulse", "energy", "forecasting"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
