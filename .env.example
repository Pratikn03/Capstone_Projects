# GridPulse environment variables (copy to .env and fill in as needed)

# Tokens / credentials for optional data sources
ELECTRICITYMAPS_TOKEN=
WATTTIME_USERNAME=
WATTTIME_PASSWORD=

# Optional alerting webhook (Slack/MS Teams or generic HTTP endpoint)
GRIDPULSE_ALERT_WEBHOOK=

# Logging
GRIDPULSE_LOG_LEVEL=INFO
GRIDPULSE_LOG_FORMAT=text   # text | json

# API readiness paths (override if you store data elsewhere)
GRIDPULSE_FEATURES_PATH=data/processed/features.parquet
GRIDPULSE_MODELS_DIR=artifacts/models

# Frontend (Next.js)
OPENAI_API_KEY=
FASTAPI_URL=http://localhost:8000

