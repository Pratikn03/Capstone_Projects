[Unit]
Description=GridPulse Dashboard
After=network.target

[Service]
Type=simple
User=gridpulse
WorkingDirectory=/opt/gridpulse
EnvironmentFile=/etc/gridpulse/gridpulse.env
ExecStart=/opt/gridpulse/.venv/bin/streamlit run services/dashboard/app.py --server.port 8501 --server.address 0.0.0.0
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target

