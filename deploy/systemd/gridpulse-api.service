[Unit]
Description=GridPulse API
After=network.target

[Service]
Type=simple
User=gridpulse
WorkingDirectory=/opt/gridpulse
EnvironmentFile=/etc/gridpulse/gridpulse.env
ExecStart=/opt/gridpulse/.venv/bin/uvicorn services.api.main:app --host 0.0.0.0 --port 8000
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target

